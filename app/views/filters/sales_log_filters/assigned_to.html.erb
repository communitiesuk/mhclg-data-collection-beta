<%= form_with model: @filter_form, url: filters_sales_logs_path(search: @search_term, codes_only: @codes_only) do |f| %>
  <%= render partial: "filters/radio_filter",
             locals: {
                f:,
                options: {
                  "all": { label: "Any user" },
                  "you": { label: "You" },
                  "specific_user": {
                    label: "Specific user",
                    conditional_filter: {
                      type: "select",
                      label: "User",
                      category: "user",
                      options: assigned_to_filter_options(current_user),
                    },
                  },
                },
                label: "Assigned to",
                category: "assigned_to",
              } %>

  <div class="govuk-button-group">
    <%= f.govuk_submit "Save changes" %>
    <%= govuk_button_link_to "Cancel", csv_download_sales_logs_path(search: @search_term, codes_only: @codes_only), secondary: true %>
  </div>
<% end %>
