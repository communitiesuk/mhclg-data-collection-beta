<% content_for :before_content do %>
  <%= govuk_back_link href: @form.back_path %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, scope: :form, url: bulk_upload_lettings_log_path(id: "upload-your-file"), method: :patch do |f| %>
      <%= f.hidden_field :year %>

      <%= f.govuk_error_summary %>

      <span class="govuk-caption-l">Upload lettings logs in bulk (<%= @form.year_combo %>)</span>
      <h1 class="govuk-heading-l">Upload your file</h1>

      <p class="govuk-body">
        All data must be complete and formatted correctly (CSV <strong>only</strong>) - if not, we will reject the entired file.
      </p>

      <%= f.govuk_file_field :file,
        label: { text: "Upload file" } %>

      <%= f.govuk_submit "Upload" %>
    <% end %>
  </div>
</div>
